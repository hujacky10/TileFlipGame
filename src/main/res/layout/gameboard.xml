<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/center">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="50sp"
            android:layout_height="75sp"
            android:scaleType="centerCrop"
            android:onClick="table" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="50sp"
            android:layout_height="75sp"
            android:scaleType="centerCrop"
            android:onClick="table" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="50sp"
            android:layout_height="75sp"
            android:scaleType="centerCrop"
            android:onClick="table" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="50sp"
            android:layout_height="75sp"
            android:scaleType="centerCrop"
            android:onClick="table"/>

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="50sp"
            android:layout_height="75sp"
            android:scaleType="centerCrop"
            android:onClick="table" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="50sp"
            android:layout_height="75sp"
            android:scaleType="centerCrop"
            android:onClick="table" />

    </LinearLayout>


<!--===========================================================================-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/left">

        <ImageButton
            android:id="@+id/token1"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:src="@drawable/ninja"
            android:scaleType="centerCrop"
            android:onClick="select" />

        <ImageButton
            android:id="@+id/token2"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:src="@drawable/dialog"
            android:scaleType="centerCrop"
            android:onClick="select" />

        <ImageButton
            android:id="@+id/token3"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:src="@drawable/pi"
            android:scaleType="centerCrop"
            android:onClick="select" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:id="@+id/right">


        <ImageButton
            android:id="@+id/token4"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:scaleType="centerCrop"
            android:src="@drawable/square"
            android:onClick="select" />

        <ImageButton
            android:id="@+id/token5"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:scaleType="centerCrop"
            android:src="@drawable/star"
            android:onClick="select" />

        <ImageButton
            android:id="@+id/token6"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:scaleType="centerCrop"
            android:src="@drawable/redbox"
            android:onClick="select" />

    </LinearLayout>

    <!--===========================================================================-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"
        android:layout_margin="25dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peek"
            android:onClick="peek"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flip"
            android:onClick="flip"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swap"
            android:onClick="swap"/>
    </LinearLayout>
</RelativeLayout>